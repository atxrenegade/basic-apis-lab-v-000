<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
  <div>
	  <ul>
		  <% if @repos %>
			  <% @repos.each do |repo| %>
				  <li>
					<%= repo['full_name'] %><br>
					<%= repo['description'] %><br>
					<a href='<%= repo["html_url"] %>'> <%= repo['html_url'] %> </a><br><br>
				  </li>
			  <% end %>
		  <% end %>
	  </ul>
  <div>
<% end %>
